<%- include("header-start") -%>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/sign-in/">
    <link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="css/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    
<main class="form-signin">
  <form action="/register" method="post">
    <h1 class="h3 mb-3 fw-normal">Welcome To Padel Register</h1>
    <h2 class="h3 mb-3 fw-normal">Please Register</h2>

    <div class="form-floating">
      <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
      <label for="floatingInput">Email address</label>
    </div>
    <br>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
      <label for="floatingPassword">Password</label>
    </div>
    <br>
    <div class="form-floating">
      <input type="text" class="form-control" id="floatingFullName" placeholder="Paul Padel" name="fullName" >
      <label for="floatingFullName">Full Name</label>
    </div>
    <br>
    <div class="form-floating">
      <input type="number" max="5" class="form-control" id="floatingRating" placeholder="0" name="rating">
      <label for="floatingRating">Rating</label>
    </div>
    <br>
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary btn-signin" type="submit">Register</button>
    <br>
    <br>
    <a href="/login">Already have an account?</a>
    <p class="mt-5 mb-3 text-muted">&copy; 2017â€“<%=currentYear%>
    </p>
  </form>
</main>

